<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/inicioGuideLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nombresGuideLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/emailGuideLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ocupacionGuideLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80"
        />



    <TextView
        android:id="@+id/personaId_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/inicioGuideLine"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/nombresTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Frankelyn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/inicioGuideLine"
        />

    <TextView
        android:id="@+id/emailTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="frankelyn@ucne"
        app:layout_constraintEnd_toEndOf="@id/emailGuideLine"
        app:layout_constraintStart_toStartOf="@id/nombresGuideLine"
        />

    <TextView
        android:id="@+id/ocupacionTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Estudiante"
        app:layout_constraintEnd_toEndOf="@id/ocupacionGuideLine"
        app:layout_constraintStart_toStartOf="@id/emailGuideLine"
        />

    <TextView
        android:id="@+id/salarioTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Estudiante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ocupacionGuideLine"
        />

</androidx.constraintlayout.widget.ConstraintLayout>